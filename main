    <script>
        const brilliantBlues = {
            navy: '#003f5c',
            blue: '#2f4b7c',
            purple: '#665191',
            magenta: '#a05195',
            pink: '#d45087',
            red: '#f95d6a',
            orange: '#ff7c43',
            yellow: '#ffa600',
            lightBlue: '#e6eff7',
            darkNavy: '#002a3f'
        };

        function wrapLabel(str, maxWidth) {
            if (str.length <= maxWidth) {
                return str;
            }
            const words = str.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + word).length > maxWidth && currentLine.length > 0) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            }
            lines.push(currentLine.trim());
            return lines;
        }

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };
        
        const defaultChartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: brilliantBlues.blue,
                        font: {
                            weight: '600',
                            size: 14
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    },
                    backgroundColor: 'rgba(0, 63, 92, 0.9)',
                    titleFont: {
                        size: 16,
                        weight: 'bold'
                    },
                    bodyFont: {
                        size: 14
                    },
                    padding: 12,
                    cornerRadius: 8
                }
            },
            scales: {
                y: {
                    ticks: { color: brilliantBlues.blue, font: { weight: '600', size: 12 } },
                    grid: { color: '#e0e0e0', drawBorder: false }
                },
                x: {
                    ticks: { color: brilliantBlues.blue, font: { weight: '600', size: 12 } },
                    grid: { display: false }
                }
            }
        };

        new Chart(document.getElementById('growthChart'), {
            type: 'line',
            data: {
                labels: ['2024', '2025', '2026', '2027', '2028', '2029'],
                datasets: [{
                    label: 'Global Output ($ Trillion)',
                    data: [34.8, 35.2, 35.7, 36.1, 36.4, 36.7],
                    borderColor: brilliantBlues.orange,
                    backgroundColor: 'rgba(255, 124, 67, 0.2)',
                    fill: true,
                    tension: 0.4,
                    pointRadius: 5,
                    pointBackgroundColor: brilliantBlues.orange,
                    pointBorderColor: '#fff',
                    pointHoverRadius: 7
                }]
            },
            options: defaultChartOptions
        });
        
        const rawConcernLabels = ['Rising Costs', 'Retaining and Engaging Employees', 'Recruiting People for Open Positions', 'Leveraging AI and New Technology'];
        new Chart(document.getElementById('concernsChart'), {
            type: 'bar',
            data: {
                labels: rawConcernLabels.map(label => wrapLabel(label, 16)),
                datasets: [{
                    label: '% of CEOs Citing as Top Challenge',
                    data: [70, 43, 41, 35],
                    backgroundColor: [brilliantBlues.red, brilliantBlues.orange, brilliantBlues.yellow, brilliantBlues.magenta],
                    borderColor: '#ffffff',
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: { ...defaultChartOptions, indexAxis: 'y', plugins: { legend: { display: false }, tooltip: { callbacks: { title: tooltipTitleCallback } } }, scales: { y: { ticks: { color: brilliantBlues.blue, font: { weight: '600', size: 13 } }, grid: { display: false } }, x: { ticks: { color: brilliantBlues.blue, font: { weight: '600', size: 12 } }, grid: { color: '#e0e0e0', drawBorder: false } } } }
        });

        new Chart(document.getElementById('skillsGapChart'), {
            type: 'doughnut',
            data: {
                labels: ['Unfilled Jobs (1.9M)', 'Filled Jobs (1.9M)'],
                datasets: [{
                    data: [1.9, 1.9],
                    backgroundColor: [brilliantBlues.red, brilliantBlues.purple],
                    hoverOffset: 8,
                    borderColor: '#fff',
                    borderWidth: 3
                }]
            },
            options: { ...defaultChartOptions, cutout: '65%', scales: { y: { display: false }, x: { display: false } }, plugins: { legend: { position: 'bottom', labels: { font: { size: 14 } } }, tooltip: { callbacks: { title: tooltipTitleCallback } } } }
        });
        
        new Chart(document.getElementById('dxBudgetChart'), {
            type: 'pie',
            data: {
                labels: ['Maintenance of Existing Systems (65%)', 'Innovation & New Projects (35%)'],
                datasets: [{
                    data: [65, 35],
                    backgroundColor: [brilliantBlues.pink, brilliantBlues.purple],
                    hoverOffset: 8,
                    borderColor: '#fff',
                    borderWidth: 3
                }]
            },
            options: { ...defaultChartOptions, scales: { y: { display: false }, x: { display: false } }, plugins: { legend: { position: 'bottom', labels: { font: { size: 14 } } }, tooltip: { callbacks: { title: tooltipTitleCallback } } } }
        });

        new Chart(document.getElementById('nimbleImpactChart'), {
            type: 'radar',
            data: {
                labels: ['Productivity', 'Downtime Reduction', 'Defect Reduction', 'Cycle Time Reduction', 'Throughput'],
                datasets: [{
                    label: 'Improvement with Nimble',
                    data: [25, 19, 35, 7, 15],
                    backgroundColor: 'rgba(255, 124, 67, 0.4)',
                    borderColor: brilliantBlues.orange,
                    pointBackgroundColor: brilliantBlues.orange,
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: brilliantBlues.orange,
                    pointRadius: 6,
                    pointHoverRadius: 8
                }]
            },
            options: {
                ...defaultChartOptions,
                scales: {
                    r: {
                        angleLines: { color: 'rgba(255, 255, 255, 0.3)' },
                        grid: { color: 'rgba(255, 255, 255, 0.3)' },
                        pointLabels: { color: '#ffffff', font: { size: 13, weight: 'bold' } },
                        ticks: {
                            color: '#ffffff',
                            backdropColor: 'transparent',
                            stepSize: 10,
                            font: { size: 11 }
                        }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });
    </script>
</body>
